<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActividadEscucha" android:background="@drawable/blur5" android:id="@+id/cl_escucha">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/listenning"
            android:id="@+id/btn_escuchar"
            android:backgroundTint="#00FFFFFF" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/lbl_escucha"/>
    <TextView
            android:text="@string/lbl_escucha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_escucha" android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/btn_escuchar"
            app:layout_constraintEnd_toEndOf="@+id/btn_escuchar" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintBottom_toTopOf="@+id/btn_escuchar" android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>
</android.support.constraint.ConstraintLayout>