<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerDetalleDiamante"
        android:background="@drawable/menu_background">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" app:srcCompat="@drawable/pear"
            android:id="@+id/img_ver_diamante" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.096" android:contentDescription="@string/lay_imagen_diamante"/>
    <TextView
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:id="@+id/txv_vista_titulos" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintVertical_bias="0.797" android:textAlignment="textEnd"
            android:textColor="#FCDF1313" android:textSize="16dp"/>
    <TextView
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:id="@+id/txv_vista_nombre" app:layout_constraintStart_toStartOf="@+id/img_ver_diamante"
            app:layout_constraintEnd_toEndOf="@+id/img_ver_diamante"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/img_ver_diamante"
            android:textAlignment="center" android:textStyle="bold|italic" android:textSize="22sp"/>
    <TextView
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:id="@+id/txv_vista_descrip"
            app:layout_constraintTop_toTopOf="@+id/txv_vista_titulos"
            app:layout_constraintBottom_toBottomOf="@+id/txv_vista_titulos"
            app:layout_constraintStart_toEndOf="@+id/txv_vista_titulos"
            app:layout_constraintVertical_bias="1.0" android:textSize="16dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_volver" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:text="@string/lbl_regresar" android:foregroundTint="#F01A1515" android:backgroundTint="#66FFFFFF"/>
</android.support.constraint.ConstraintLayout>