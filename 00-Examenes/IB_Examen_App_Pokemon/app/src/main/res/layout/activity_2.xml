<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2"
        android:background="@drawable/pokemon1">

    <Button
            android:text="@string/str_btn_trainer"
            android:layout_width="159dp"
            android:layout_height="65dp"
            android:id="@+id/btn_g_entrenador"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.394"/>

    <Button
            android:text="@string/str_btn_pokemon"
            android:layout_width="154dp"
            android:layout_height="67dp"
            android:id="@+id/btn_Nuevo_Entrenador"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_g_entrenador"
            app:layout_constraintStart_toStartOf="@+id/btn_g_entrenador"
            app:layout_constraintEnd_toEndOf="@+id/btn_g_entrenador"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>