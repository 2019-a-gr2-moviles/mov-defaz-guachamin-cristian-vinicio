<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaEntrenadores">

    <ListView
            android:layout_width="395dp"
            android:layout_height="527dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:id="@+id/lv_lista_entrenadores"/>

    <TextView
            android:text="@string/lbl_listaEntrenadores"
            android:layout_width="195dp"
            android:layout_height="46dp"
            android:id="@+id/lblEntrenador"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/lv_lista_entrenadores"
            app:layout_constraintStart_toStartOf="@+id/lv_lista_entrenadores"
            app:layout_constraintEnd_toEndOf="@+id/lv_lista_entrenadores"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.52"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>