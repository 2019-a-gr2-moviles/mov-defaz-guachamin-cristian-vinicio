<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CicloVidaActivity">

    <Button
            android:text="Aumentar contador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:id="@+id/txv_contador" app:layout_constraintStart_toStartOf="@+id/btn_contador"
            app:layout_constraintEnd_toEndOf="@+id/btn_contador"
            app:layout_constraintTop_toBottomOf="@+id/btn_contador" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.416" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>