<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IntentRespuestaActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="ENVIAR RESPUESTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_enviar_intent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintVertical_bias="0.473"/>
        <Button
                android:text="ENVIAR RESPUESTA PROPIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_enviar_respuesta_propia" app:layout_constraintStart_toStartOf="@+id/btn_enviar_intent"
                app:layout_constraintEnd_toEndOf="@+id/btn_enviar_intent" android:layout_marginBottom="84dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_enviar_intent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>